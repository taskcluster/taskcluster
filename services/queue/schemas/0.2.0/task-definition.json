{
  "id":           "http://schemas.taskcluster.net/0.2.0/task-definition.json#",
  "$schema":      "http://json-schema.org/draft-04/schema#",
  "title":        "Task Definition",
  "description":  "Definition of a task that can be scheduled",
  "type":               "object",
  "properties": {
    "version":          {"type": "string"},
    "task_id":          {"$ref": "http://schemas.taskcluster.net/0.2.0/uuid.json#"},
    "provisioner_id":   {"$ref": "http://schemas.taskcluster.net/0.2.0/identifier.json#"},
    "worker_type":      {"$ref": "http://schemas.taskcluster.net/0.2.0/identifier.json#"},
    "routing":          {"type": "string", "maxLength": 64},
    "retries":          {"type": "integer", "minimum": 0, "maximum": 999},
    "priority":         {"type": "number"},
    "created":          {"type": "string", "format": "date-time"},
    "deadline":         {"type": "string", "format": "date-time"},
    "payload":          {"type": "object"},
    "metadata": {
      "type":                   "object",
      "properties": {
        "name":                 {"type": "string", "maxLength": 255},
        "description":          {"type": "string", "maxLength": 32768},
        "owner":                {"type": "string", "format": "email", "maxLength": 255},
        "maintainer":           {"type": "string", "format": "email", "maxLength": 255}
      },
      "additionalProperties":   false,
      "required": ["name", "owner", "maintainer"]
    },
    "tags": {
      "type":                   "object",
      "additionalProperties":   {"type": "string", "maxLength": 4096}
    }
  },
  "additionalProperties":   false,
  "required": [
    "version", "task_id", "provisioner_id", "worker_type", "routing", "retries",
    "priority", "created", "deadline", "payload", "metadata", "tags"
  ]
}