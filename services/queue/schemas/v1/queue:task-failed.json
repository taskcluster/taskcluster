{
  "id":           "http://schemas.taskcluster.net/v1/queue:task-failed.json#",
  "$schema":      "http://json-schema.org/draft-04/schema#",
  "title":        "Failed Task Message",
  "description":  "Message reporting that a task have failed",
  "type":         "object",
  "properties": {
    "version":    {"$const": "message-version"},
    "status":     {"$ref": "http://schemas.taskcluster.net/v1/task-status.json#"},
    "runId": {
      "description":  "Id of the last run for the task",
      "type":         "integer",
      "minimum":      {"$const": "min-run-id"},
      "maximum":      {"$const": "max-run-id"}
    },
    "workerGroup": {
      "description":    "Identifier for the worker-group within which the last attempt of the task ran.",
      "type":           "string",
      "minLength":      {"$const": "identifier-min-length"},
      "maxLength":      {"$const": "identifier-max-length"},
      "pattern":        {"$const": "identifier-pattern"}
    },
    "workerId": {
      "description":    "Identifier for the last worker that failed to report, causing the task to fail.",
      "type":           "string",
      "minLength":      {"$const": "identifier-min-length"},
      "maxLength":      {"$const": "identifier-max-length"},
      "pattern":        {"$const": "identifier-pattern"}
    }
  },
  "additionalProperties":   false,
  "required": ["version", "status", "runId", "workerGroup", "workerId"]
}