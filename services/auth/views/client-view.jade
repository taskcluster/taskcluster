extends layout

block content
  dl.dl-horizontal
    dt Name
    dd #{client.name}
    dt ClientId
    dd
      code #{client.clientId}
    dt AccessToken
    dd
      code #{client.accessToken}
    dt Expires
    dd #{moment(client.expires).fromNow()}
    dt Scopes
    dd
      ul
        for scope in client.scopes
          li
            code #{scope}
    dt Notes
    dd !{marked(client.details.notes)}
    hr
    dt Actions
    dd
      a(href="/client/#{client.clientId}/edit").btn.btn-success.btn-sm
        i.glyphicon.glyphicon-pencil
        |  Edit
      = ' '
      a(
        href="/client/#{client.clientId}/delete"
      ).btn.btn-danger.btn-sm.prompt-first
        i.glyphicon.glyphicon-trash
        |  Delete
  script
    | $('.prompt-first').click(function() {
    |   return confirm("Do you really want to delete this client?");
    | });
